<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US" lang="en-US"
      xmlns:metal="http://xml.zope.org/namespaces/metal" 
      xmlns:tal="http://xml.zope.org/namespaces/tal" 
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="rhaptos">

  <metal:block fill-slot="base">
    <tal:block tal:define="dummy python:request.set('disable_border', 1)" />
  </metal:block>

  <link rel="stylesheet" href="content_browse.css" type="text/css" metal:fill-slot="css_slot" />

  <body>
    <div metal:fill-slot="main"
         tal:define="viewinfo context/expanded_browse_institution_view;
                     searchhash viewinfo/searchhash;
                     results viewinfo/results;
                     inst viewinfo/inst;
                     base_letter viewinfo/base_letter;
                     pss modules/Products/PythonScripts/standard;">

      <h1 class="topheading" i18n:translate="heading_browse_institution">
        Browse Collections by Institution:
        <span i18n:name="institution_name" tal:replace="python: inst != '-' and inst or 'Unspecified'"/>
      </h1>

      <div tal:define="toPass python:pss.url_quote(inst).replace('/','%2F').replace('%','*');
                       returnhref string:${context/portal_url}/content/browse_content/institution/${base_letter}/${toPass}">
        <metal:block metal:use-macro="here/browse_macro/macros/search_browse_nav" />
      </div>

      <tal:block tal:define="length python:len(results);
                             global found length;"
                 tal:condition="found">
        <tal:block metal:use-macro="here/search_macros/macros/search_results"/>
      </tal:block>
    </div>
  </body>
</html>
